@model IEnumerable<DevelopersChallenge2.Application.Domain.Entity.Transaction>

@{
    ViewData["Title"] = "Transactions";
}

<a class="button btn btn-danger" asp-area="" asp-controller="Home" asp-action="DeleteTransactions">Zerar registros</a>
<h1>Transactions</h1>

<table class="row-border hover order-column" id="transactionsTable">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Memo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PostedDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransactionType)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Memo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PostedDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TransactionType)
                </td>
            </tr>
        }
    </tbody>
</table>